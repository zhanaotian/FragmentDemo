        </activity>
        <activity android:name=".activity.StateAddActivity" />
        <activity android:name=".activity.DynamicAddActivity" />
        <activity android:name=".activity.LifecycleActivity" />
        <activity android:name=".activity.FragmentTaskActivity" />
        <activity android:name=".activity.StartActivityForResultActivity" />
